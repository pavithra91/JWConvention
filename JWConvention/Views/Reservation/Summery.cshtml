@model JWConvention.Models.ReservationModel
@{
    ViewBag.Title = "Summery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="main-content">

    <h1>Booking Summery</h1>
    <div class="row">



        <div class="form_title">
            <p>

            </p>
        </div>
        <div class="step">

            <div id="message-contact"></div>
@using (Html.BeginForm())
{

    @Html.HiddenFor(m => Model.BookingID);
    @Html.HiddenFor(m => Model._hotelCode);
    @Html.HiddenFor(m => Model._delegate.GroupId);
    @Html.HiddenFor(m => Model._delegate.Name);
    @Html.HiddenFor(m => Model._delegate.ContactNo);
    @Html.HiddenFor(m => Model._delegate.Country);
    @Html.HiddenFor(m => Model._delegate.DelegateAddress);
    @Html.HiddenFor(m => Model._delegate.EmailAddress);
    @Html.HiddenFor(m => Model._delegate.Nationality);
    @Html.HiddenFor(m => Model._delegate.PassportNo);
    @Html.HiddenFor(m => Model._delegate.Title);

                <!-- End row -->
                <div class="row">
                    <div class="col-md-3 col-sm-2">
                        <div class="form-group">
                            <label>Group ID</label>
                            @Html.TextBoxFor(m => Model._delegate.GroupId, new { @name = "txtGroupId", @id = "txtGroupId", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #FFF;", @readonly= "readonly" })
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-2">
                        <div class="form-group">
                            <label>Booking ID</label>
                            @Html.TextBoxFor(m => Model.BookingID, new { @name = "txtBookingID", @id = "txtBookingID", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #FFF;", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    @*<div class="col-md-2 col-sm-2">
                        <div class="form-group">
                            <label> Title</label>
                            <input type="text" style="width:98%; height:39px; padding-left:10px; border: thin solid #FFF;" readonly="readonly" placeholder="sdsdsdsdsd" />
                        </div>
                    </div>*@
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(m => Model._delegate.Name, new { @name = "txtName", @id = "txtName", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #FFF;", @readonly = "readonly" })
                        </div>
                    </div>


                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(m => Model._delegate.EmailAddress, new { @name = "txtEmail", @id = "txtEmail", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #FFF;", @readonly = "readonly" })
                        </div>
                    </div>
                </div>



                @*<div class="row">

                </div>*@


                <hr />

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Hotel</label>
                            @Html.TextBoxFor(m => Model._hotel.HotelName, new { @name = "txtHotelName", @id = "txtHotelName", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #FFF;", @readonly = "readonly" })
                            @*<input type="text" style="width:98%; height:39px; padding-left:10px; border: thin solid #FFF;" readonly="readonly" placeholder="sdsdsdsdsd" />*@
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Package</label>
                            @Html.TextBoxFor(m => Model._packageType, new { @name = "txtPackageType", @id = "txtPackageType", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #FFF;", @readonly = "readonly" })
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>From Date</label>
                            @Html.TextBoxFor(m => Model._fromDate, new { @name = "txtFromDate", @id = "txtFromDate", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #FFF;", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>To Date</label>
                            @Html.TextBoxFor(m => Model._toDate, new { @name = "txtToDate", @id = "txtToDate", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #FFF;", @readonly = "readonly" })
                        </div>
                    </div>
                </div>

                <div class="row" style="padding-top: 10px;">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Package Cost</label>
                                (USD) @Html.TextBoxFor(m => Model.PackageCost, new { @name = "txtPackageCost", @id = "txtPackageCost", @style = "width:98%;height:39px;padding-left:10px;border: thin solid #FFF;color: #fb0000;font-size: large;font-weight: bold;", @readonly = "readonly" })                          
                        </div>
                    </div>
                </div>

                <hr />


                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Additional Accomadation</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10 col-sm-6">
                        <div class="form-group">
                            <table width="100%" border="1">
                                <tr align="center">
                                    <td>Date</td>
                                    <td>Hotel</td>
                                    <td>Room Type</td>
                                    <td>Basis</td>
                                    <td>Nights</td>
                                    <td>No of Rooms</td>
                                    <td>Cost</td>
                                </tr>
                                @{
                                    if (Model._additionalList != null)
                                    {
                                        foreach (var item in Model._additionalList)
                                        {
                                            <tr>
                                                <td>@item._addtionalDate</td>
                                                <td style="width: 302px;">@item._addtionalHotel</td>
                                                <td>@item._addtionalRoom</td>
                                                <td>@item._addtionalBasis</td>
                                                <td>@item._addtionalNoOfNights</td>
                                                <td>@item._addtionalNoOfRooms</td>
                                                <td>@item._Cost</td>
                                                @*<td>
                        <a href="@Url.Action("ManageUsers","Account", new { id = item. })" style="margin-left:10px;">
        <i class="fa fa-pencil-square-o"></i>
    </a>
                                                </td>*@
                                            </tr>
                                        }
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Additional  Cost</label>
                            (USD) @Html.TextBoxFor(m => Model.AdditionalACCost, new { @name = "txtAdditionalACCost", @id = "txtAdditionalACCost", @style = "width:98%;height:39px;padding-left:10px;border: thin solid #FFF;color: #fb0000;font-size: large;font-weight: bold;", @readonly = "readonly" })
                        </div>
                     </div>
                 </div>
                <hr />

                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Total Cost</label>
                            (USD) @Html.TextBoxFor(m => Model.TotalCost, new { @name = "txtTotalCost", @id = "txtTotalCost", @style = "width:98%;height:39px;padding-left:10px;border: thin solid #FFF;color: #fb0000;font-size: large;font-weight: bold;", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="checkbox-inline">
                            <label>Advanced Payment 50%  </label>
                            <div style="margin-left: 55px;">
                                @Html.CheckBoxFor(m => Model.isAdvancedPayment, new { @name = "chkAdvancedPayment", @id = "chkAdvancedPayment" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group" style="padding-top:30px;">
                    <input type="submit" name="Pay" value="Pay Now" class="btn btn-primary" formaction="PostToPayment" formmethod="post" />
                </div>


}
        </div>
    </div>
</div>



