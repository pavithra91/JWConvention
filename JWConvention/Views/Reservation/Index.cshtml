@model JWConvention.Models.ReservationModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="main-content">

    <h1>Booking Details</h1>

@using (Html.BeginForm())
{

    @Html.HiddenFor(m => Model.BookingID);

    <div class="row">
        <div class="form_title">
            <h3><strong><i class="icon-pencil"></i></strong>Fill the form below</h3>
        </div>
        <div class="step">

            <div id="message-contact"></div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Package</label>
                            <span id="spryselect2">

                                @Html.DropDownListFor(m => Model._packageType, new SelectList(new List<Object> {
                                   new { value = 0 , text = "7 Night Accomadation"  },
                                   new { value = 1 , text = "8 Night Accomadation" },
                                   new { value = 2 , text = "9 Night Accomadation"  },
                                   new { value = 3 , text = "10 Night Accomadation"  }}, "value", "text"), "- Please Select Package -", new { @name = "drpPackages", @class = "form-control", @id = "drpPackages" })

                                @*<select name="drpPackages" id="drpPackages" class="form-control">
                                    <option value="0">Please Select</option>
                                    <option value="1">7 Night Accomadation</option>
                                    <option value="2">8 Night Accomadation</option>
                                    <option value="3">9 Night Accomadation</option>
                                </select>*@
                                <span class="selectInvalidMsg">Please select a valid item.</span><span class="selectRequiredMsg">Please select an item.</span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Room Catagory</label>
                            <span id="spryselect1">
                                @Html.DropDownListFor(m => Model._roomType, new SelectList(Model._roomList, "RoomID", "RoomType"), "- Please Select Room Category -", new { @name = "drpRoomType", @class = "form-control", @id = "drpRoomType" })
                                <span class="selectInvalidMsg">Please select a valid item.</span><span class="selectRequiredMsg">Please select an item.</span>
                            </span>
                        </div>
                    </div>
                    
                    <div class="col-md-4 col-sm-4">
                        <div class="form-group">
                            <label>Occupancy</label>
                            <span id="spryselect1">
                                @Html.DropDownListFor(m => Model._Occupancy, new SelectList(new List<Object> {
                                   new { value = 0 , text = "Single"  },
                                   new { value = 1 , text = "Double" },
                                   new { value = 2 , text = "Triple"} }, "value", "text"), "- Please Select Room Category -", new { @name = "drpOccupancy", @class = "form-control", @id = "drpOccupancy" })
                                <span class="selectInvalidMsg">Please select a valid item.</span><span class="selectRequiredMsg">Please select an item.</span>
                            </span>
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-2" id="bedPreference" style="display:none">
                        <div class="form-group">
                            <label>Bed Perferance</label>
                            <span id="spryselect2">

                                @Html.DropDownListFor(m => Model._Occupancy, new SelectList(new List<Object> {
                                   new { value = 0 , text = "Double"  },
                                   new { value = 1 , text = "Twin" } }, "value", "text"), "- Please Select Bed Perferance -", new { @name = "drpPerferences", @class = "form-control", @id = "drpPerferences" })
                                <span class="selectInvalidMsg">Please select a valid item.</span><span class="selectRequiredMsg">Please select an item.</span>
                            </span>
                        </div>
                    </div>
                </div>
                <!-- End row -->

                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>From</label>
                            <span id="sprytextfield1">
                                @Html.TextBoxFor(m => Model._fromDate, new { @name = "datetimepicker2", @class = "form-control", value = "", @id = "datetimepicker2" })
                                <span class="textfieldRequiredMsg">A value is required.</span>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>To</label>
                            <span id="sprytextfield2">
                                @Html.TextBoxFor(m => Model._toDate, new { @name = "datetimepicker3", @readonly = "readonly", @class = "form-control", value = "", @id = "datetimepicker3" })
                                <span class="textfieldRequiredMsg">A value is required.</span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2 col-sm-2">
                            <div class="checkbox-inline">
                                <label>Arrival Tranfer  </label>
                                <div style="margin-left: 55px;">
                                    <input name="chkArrival" type="checkbox" value="" />
                                </div>
                            </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Date</label>
                            @Html.TextBoxFor(m => Model._ArrivalDate, new { @name = "datetimepicker7", @class = "form-control", value = "", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #e5e5e5;", @id = "datetimepicker7" })
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-2">
                        <div class="form-group">
                            <label>Time</label>
                            @Html.TextBoxFor(m => Model._ArrivalTime, new { @name = "datetimepicker1", @class = "form-control", value = "", @style = "width:98%; height:35px; padding-left:10px; border: thin solid #e5e5e5;", @id = "datetimepicker1" })
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Flight Number</label>
                            @Html.TextBoxFor(m => Model._ArrivalFlightNumber, new { @name = "txtArrivalFlightNumber", @class = "form-control", value = "", @id = "txtArrivalFlightNumber" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2 col-sm-2">
                        <div class="checkbox-inline">
                            <label>
                                Departure
                            </label>
                            <div style="margin-left: 55px;">
                                <input name="chkDeparture" type="checkbox" value="" />
                                </div>
                            </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Date</label>
                            @Html.TextBoxFor(m => Model._DepartureDate, new { @name = "datetimepicker8", @class = "form-control", value = "", @style = "width:98%; height:39px; padding-left:10px; border: thin solid #e5e5e5;", @id = "datetimepicker8" })                         
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-2">
                        <div class="form-group">
                            <label>Time</label>
                            @Html.TextBoxFor(m => Model._DepartureTime, new { @name = "datetimepicker5", @class = "form-control", value = "", @style = "width:98%; height:35px; padding-left:10px; border: thin solid #e5e5e5;", @id = "datetimepicker5" })
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Flight Number</label>
                            @Html.TextBoxFor(m => Model._DepartureFlightNumber, new { @name = "txtDepartureFlightNumber", @class = "form-control", value = "", @id = "txtDepartureFlightNumber" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="form-group" style="background-color:#EBEBEB;">
                        <table width="99%" border="0" align="center" bgcolor="#E5E5E5">
                            <tr>
                                <td width="29%"><img src="@Model._hotel.HotelImage" width="284" height="192" /></td>
                                <td width="71%" valign="top" style="text-align:justify; padding:15px;">
                                    @Model._hotel.HotelDescription
                                </td>
                            </tr>
                        </table>


                    </div>
                </div>
                <br />


                <br />

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Message</label>
                            @Html.TextAreaFor(m => Model.Remarks, new { @name = "txtRemarks", @rows = "5", @class = "form-control", value = "", @id = "txtRemarks", @placeholder = "Write your message", @style = "height:200px;" })
                        </div>
                    </div>
                </div>

                <div class="row">
                        @*@{ Html.RenderPartial("_AdditionalAccomerdation", Model);  }*@

                    <div class="col-md-6 col-sm-6">
                        <label for="chkPassport">
                            Additional Accommodation &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <input type="checkbox" id="chkPassport" onclick="ShowHideDiv(this)" />
                        </label>
                    </div>

                    <br /><br />

                    <div id="dvPassport" style="display: none">
                        <div class="row">
                            <div class="col-md-2 col-sm-2">
                                <div class="form-group">
                                    <label>Date</label>
                                    @Html.TextBoxFor(m => Model._additional._addtionalDate, new { @name = "datetimepicker9", @class = "form-control", value = "", @style = "width:98%; height:35px; padding-left:10px; border: thin solid #e5e5e5;", @id = "datetimepicker9" })
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-2">
                                <div class="form-group">
                                    <label>Hotel</label>
                                    @Html.DropDownListFor(m => Model._additional._addtionalHotel, new SelectList(Model._hotelList, "HotelID", "HotelName"), "- Please Select Hotel Category -", new { @name = "drpAddtionalHotels", @class = "form-control", @id = "drpAddtionalHotels" })
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-2">
                                <div class="form-group">
                                    <label>Room</label>
                                    @Html.DropDownListFor(m => Model._additional._addtionalRoom, new SelectList(Model._roomList, "RoomID", "RoomType"), "- Please Select Room Category -", new { @name = "drpAddtionalRooms", @class = "form-control", @id = "drpAddtionalRooms" })
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-2">
                                <div class="form-group">
                                    <label>Basis</label>
                                    @Html.DropDownListFor(m => Model._additional._addtionalBasis, new SelectList(new List<Object> {
                                   new { value = 0 , text = "Half Board"  },
                                   new { value = 1 , text = "Full Board" },
                                   new { value = 2 , text = "Room Only"  }}, "value", "text"), "- Please Select Board Basis -", new { @name = "drpAddtionalBasis", @class = "form-control", @id = "drpAddtionalBasis" })
                                </div>
                            </div>

                            <div class="col-md-2 col-sm-2">
                                <div class="form-group">
                                    <label>Nights</label>
                                    @Html.DropDownListFor(m => Model._additional._addtionalNoOfNights, new SelectList(new List<Object> {
                                   new { value = 0 , text = "01"  },
                                   new { value = 1 , text = "02" },
                                   new { value = 2 , text = "03"  }}, "value", "text"), "- Please Select No of Nights -", new { @name = "drpAddtionalNoOfNights", @class = "form-control", @id = "drpAddtionalNoOfNights" })
                                </div>
                            </div>


                            <div class="col-md-2 col-sm-2">
                                <div class="form-group">
                                    <label>No of Rooms</label>
                                    @Html.DropDownListFor(m => Model._additional._addtionalNoOfRooms, new SelectList(new List<Object> {
                                   new { value = 0 , text = "01"  },
                                   new { value = 1 , text = "02" },
                                   new { value = 2 , text = "03"  }}, "value", "text"), "- Please Select No of Rooms -", new { @name = "drpAddtionalNoOfRooms", @class = "form-control", @id = "drpAddtionalNoOfRooms" })
                                </div>
                            </div>

                            <div class="form-group" style="padding-top:30px;">
                                <input type="submit" name="cancel" value="Cancel" formaction="SaveAdditionalRoom" formmethod="post" />
                            </div>
                        </div>
                        <br />
                    </div>

                    <div class="form-group">
                        <table width="100%" border="1">
                            <tr align="center">
                                <td>Date</td>
                                <td>Hotel</td>
                                <td>Room Type</td>
                                <td>Basis</td>
                                <td>Nights</td>
                                <td>No of Rooms</td>
                                <td>Action</td>
                            </tr>
                            
                            @foreach (var item in Model._additionalList)
                            {
                                <tr>
                                    <td>@item._addtionalDate</td>
                                    <td>@item._addtionalHotel</td>
                                    <td>@item._addtionalRoom</td>
                                    <td>@item._addtionalBasis</td>
                                    <td>@item._addtionalNoOfNights</td>
                                    <td>@item._addtionalNoOfRooms</td>
                                    <td>&nbsp;</td>
                                </tr>
                            }

                        </table>
                    </div>

                   </div>
                   


                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" name="save" value="Save" formaction="SaveReservation" formmethod="post" />
                    </div>
                </div>               
        </div>
    </div>



    <div class="row city">
        <div class="col-md-6">

        </div>
        <div class="col-md-6">

        </div>



    </div>
}
</div>


@section scriptLocation{    

@*<script src="build/jquery.datetimepicker.full.js"></script>*@

<script src="~/scripts/Reservation/Index.js"></script>


    <script>
        $("#drpOccupancy").change(function () {
            var OccupancyID = $('#drpOccupancy').val();
            if(OccupancyID=="2")
            {
                var dvPassport = document.getElementById("bedPreference");
                dvPassport.style.display ="block";
            }
            else
            {
                var dvPassport = document.getElementById("bedPreference");
                dvPassport.style.display = "none";
            }
        });

        $("#drpPackages").change(function () {
            var PackageID = $('#drpPackages').val();
            if (PackageID == 1)
            {
                $('#datetimepicker2').datetimepicker({
                    minDate: '2018/06/30',
                    startDate: '2018/06/30',
                    maxDate: '2018/07/03',
                });

                $('#datetimepicker3').datetimepicker({
                    maxDate: '2018/07/03',
                });
            }
            else if (PackageID == 2)
            {
                $('#datetimepicker2').datetimepicker({
                    minDate: '2018/06/29',
                    startDate: '2018/06/29',
                    maxDate: '2018/07/03',
                });

                $('#datetimepicker3').datetimepicker({
                    maxDate: '2018/10/05',
                });
            }
            else if(PackageID == 3)
            {
                $('#datetimepicker2').datetimepicker({
                    minDate: '2018/06/28',
                    startDate: '2018/06/28',
                    maxDate: '2018/07/03',
                });

                $('#datetimepicker3').datetimepicker({
                    maxDate: '2018/10/05',
                });
            }
            else if (PackageID == 4) {
                $('#datetimepicker2').datetimepicker({
                    minDate: '2018/06/27',
                    startDate: '2018/06/27',
                    maxDate: '2018/07/03',
                });

                $('#datetimepicker3').datetimepicker({
                    maxDate: '2018/10/05',
                });
            }
        });




        $("#datetimepicker2").change(function () {
            debugger;
            var startDate = $('#datetimepicker2').val();
            
            var PackageID = $('#drpPackages').val();

            if (PackageID == 1){
                var nextDay = new Date(startDate);
                nextDay.setDate(nextDay.getDate() + 7)


                $('#datetimepicker3').val(nextDay.toString());
            }
            else if(PackageID == 2){
                var nextDay = new Date(startDate);
                nextDay.setDate(nextDay.getDate() + 8)

                $('#datetimepicker3').val(nextDay.toString);
            }
            else if (PackageID == 3) {
                var nextDay = new Date(startDate);
                nextDay.setDate(nextDay.getDate() + 9)

                $('#datetimepicker3').val(nextDay.toString());
            }
            else if (PackageID == 4) {
                var nextDay = new Date(startDate);
                nextDay.setDate(nextDay.getDate() + 10)

                $('#datetimepicker3').val(nextDay.toString());
            }
        });


    </script>

}

